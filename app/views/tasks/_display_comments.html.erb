<p id="notice"><%= notice %></p>

<div>
  <% @comment.each do |comment| %>
    <p>
      <strong> <%=comment.comment_name%> </strong>     
    </p>

    <p>
      <%= comment.comment_text %>
    </p>

    <small>
      <%= commented_hours_ago(comment) %> 
    </small>
    
    <div>
      <small> <%= link_to 'Edit', task_comment_page_tasks_path(:comment_id => comment.id) %> </small>
    </div>

    <div>
      <small> <%= link_to 'Delete', task_comment_page_tasks_path(:my_service => { destroy_comment_id: comment.id, task_id: comment.task_id} ), data: {comfirm: 'Are you sure?'} %> </small>
    </div>
    <hr>

  <% end %>
</div>